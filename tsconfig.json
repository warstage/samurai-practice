{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "docs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.json",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}
